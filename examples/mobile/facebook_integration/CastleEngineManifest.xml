<project name="facebook_integration"
  standalone_source="facebook_integration_standalone.dpr"
  game_units="GameInitialize"
  qualified_name="io.castleengine.facebook.integration"
  caption="Facebook Integration"
>
  <compiler_options>
    <search_paths>
      <path value="code/" />
    </search_paths>
  </compiler_options>

  <!-- See iOS service README:
  https://github.com/castle-engine/castle-engine/blob/master/tools/build-tool/data/ios/services/facebook/README.adoc
  -->
  <ios team="HJ95YRBGJZ">
    <services>
      <service name="facebook">
        <parameter key="app_id" value="760026309941847" />
        <parameter key="app_title" value="Castle Game Engine Example" />
      </service>
    </services>
  </ios>

  <!-- See Android service README:
  https://github.com/castle-engine/castle-engine/blob/master/tools/build-tool/data/android/services/facebook/README.adoc
  -->
  <android>
    <services>
      <service name="facebook">
        <parameter key="app_id" value="760026309941847" />
      </service>
    </services>
  </android>
</project>
