uses
  {$if defined(FPC) and (not defined(CASTLE_DISABLE_THREADS))}
    {$info Thread support enabled.}
    {$ifdef UNIX} CThreads, {$endif}
  {$endif}
  SysUtils,
  // CGE units
  CastleWindow, CastleParameters, CastleApplicationProperties,
  // Reusable tester units (in code/tester-castle/), used also by other projects
  CastleConsoleTester, CastleTesterParameters,
  // Units specific to this project
  CastleAutoGenerated, GameInitialize, TestCases;

var
  ConsoleTester: TCastleConsoleTester;
begin
  TesterParseParameters;

  if not ParamConsole then
  begin
    Application.MainWindow.OpenAndRun;
  end else
  begin
    { Avoid warnings about opening files too early. }
    ApplicationProperties._FileAccessSafe := true;
    ConsoleTester := TCastleConsoleTester.Create;
    try
      ConsoleTester.Run;
    finally
      FreeAndNil(ConsoleTester);
    end;
  end;
end.
